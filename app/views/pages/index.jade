extends ../layout

block content
    .container
        .row
            each cat in categories
                .pannel.panel-default
                    .panel-heading
                        h3 #{cat.name}
                    .panel-body
                        if cat.movies && cat.movies.length >0
                            each item in cat.movies
                                .col-md-2.col-xs-6
                                    .thumbnail
                                        a(href="/movie/#{item._id}")
                                            img(src="#{item.poster}",alt="#{item.title}")
                                        .caption
                                            h4.text-center #{item.title}
                                            p.text-center: a.btn.btn-primary(href="/movie/"+item._id,role="button") 观看预告片
